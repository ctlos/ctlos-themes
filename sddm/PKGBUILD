# Maintainer: Alex Creio <creio@tuta.io>

pkgname=ctlos-sddm-themes
pkgver=1.2
pkgrel=2
pkgdesc='Sddm themes'
url="https://github.com/ctlos/ctlos-themes"
arch=("any")
groups=('ctlos')
license=("GPL2")
depends=('git' 'sddm')
source=("git+${url}.git")
sha256sums=('SKIP')

package() {
  cd ${srcdir}/sddm
  mkdir -p "${pkgdir}/usr/share/sddm/themes"
  cp -rf {darkine,slice} "${pkgdir}/usr/share/sddm/themes"
}
