# Maintainer: Alex Creio <mailcreio at gmail>
srcname=ctlos-themes
pkgname=ui-themes
pkgver=1.2
pkgrel=1
pkgdesc='An Flat Gtk+ theme based on Arc'
url="https://github.com/ctlos/ctlos-themes"
arch=("any")
groups=('ctlos')
license=("GPL2")
depends=('git')
optdepends=("gtk-engine-murrine" "gtk-engines")
source=("git+${url}.git")
sha256sums=('SKIP')

package() {
  cd ${srcdir}/${srcname}/${pkgname}
  install -d "${pkgdir}/usr/share/themes"
  cp -rf *ui "${pkgdir}/usr/share/themes"
}
